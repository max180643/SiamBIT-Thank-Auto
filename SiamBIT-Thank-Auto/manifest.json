{
  "manifest_version": 2,
  "name": "SiamBIT - Thank Auto",
  "short_name": "SiamBIT - Thank Auto",
  "description": "This extension use to automate clicks thank button on \"details\" page at SiamBIT",
  "version": "1.0",
  "author": "Chanwit Settavongsin",
  "content_scripts": [
  {
    "matches": ["https://www.siambit.me/*"],
    "js": ["content.js"],
    "run_at": "document_end"
  }
 ],
  "permissions": ["activeTab"],
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "browser_action": {
    "default_icon": {
      "16": "icon16.png",
      "32": "icon32.png",
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "default_popup": "popup.html"
  }
}